<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_view_playlist_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_library_music_24" />

        <TextView
            android:id="@+id/text_view_playlist_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_playlist_profile"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/image_view_playlist_menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_baseline_navigate_next_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>